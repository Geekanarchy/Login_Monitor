# Website Login Details
LOGIN_URL=https://example.com/login
USERNAME=testuser
PASSWORD=supersecret
FAILED_KEYWORD=Invalid credentials

# Email Alert Configuration
EMAIL_FROM=monitor@example.com
EMAIL_TO=admin@example.com
SMTP_SERVER=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=smtpuser
SMTP_PASSWORD=smtppass

# Webex Alert (Optional)
# Leave WEBEX_WEBHOOK empty to disable Webex alerts
WEBEX_WEBHOOK=

# Retry Settings
MAX_RETRIES=3
RETRY_DELAY=5

# Recovery Notification Settings
SEND_RECOVERY_ALERTS=true

# Log Rotation Settings
LOG_MAX_BYTES=5242880  # Maximum log file size in bytes (default: 5 MB)
LOG_BACKUP_COUNT=3     # Number of backup log files to keep
