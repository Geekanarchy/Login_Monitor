# Required settings
LOGIN_URL=https://example.com/login
# Or multiple URLs
LOGIN_URLS=https://site1.com/login,https://site2.com/login
USERNAME=admin
PASSWORD=securepassword
FAILED_KEYWORD=Invalid credentials

# Email settings
EMAIL_FROM=alerts@example.com
EMAIL_TO=admin@example.com
SMTP_SERVER=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=alerts@example.com
SMTP_PASSWORD=yoursmtppassword

# Optional Webex integration
WEBEX_WEBHOOK=https://webexapis.com/v1/webhooks/incoming/...

# Monitoring settings
MAX_RETRIES=3
ALERT_THROTTLE_PERIOD=10
SEND_RECOVERY_ALERTS=true

# Logging configuration
LOG_MAX_BYTES=5242880
LOG_BACKUP_COUNT=3

# HTTP settings
REQUEST_TIMEOUT=10
VERIFY_SSL=true
SUCCESS_STATUS_CODES=200,201,202,204

# Environment metadata
# HOSTNAME=prod-server-01
# ENVIRONMENT=production